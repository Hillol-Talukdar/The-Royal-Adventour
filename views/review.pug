extends base

block content
    .row.row-cols-1.row-cols-md-3.g-4.mx-5.mb-4.mt-2
        each review in reviews
            .col
                .card
                    img.card-img-top(height= '200rem' src=`img/tours/${review.tour.imageCover}` alt=`${review.tour.name}`)
                    .card-body
                        h5.card-text.text-center=   review.tour.name
                        h5.card-text=  `User: ${review.user.name}`
                        h6.card-text=  `Review: ${review.review}`
                        h6.card-text=  `Rating: ${review.rating}`

                    .card-footer
                        a.btn.btn-danger.d-flex.justify-content-center(href=``) Delete
