nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
    .container-fluid
        a.navbar-brand(href="/") The-Royal-Adventour
        button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
            span.navbar-toggler-icon

        .collapse.navbar-collapse#navbarSupportedContent
            ul.navbar-nav.me-auto.mb-2.mb-lg-0
                li.nav-item
                    a.nav-link(aria-current="page" href="/") Home
                li.nav-item
                    a.nav-link(aria-current="page" href="/top-tours" ) Top-5-Tours

            ul.navbar-nav.mw-auto.mb-2.mb-lg-0
                if user
                    li.nav-item.dropstart
                        a.nav-link.dropstart-toggle(href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false")
                            if user.photo
                                img.rounded-circle(src=`/img/users/${user.photo}` width="38" height="38" )
                            else
                                svg.text-light(xmlns="http://www.w3.org/2000/svg" width="38" height="38" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16")
                                    path(d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z")
                                    path(fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z")

                        ul.dropdown-menu.dropdown-menu-dark(aria-labelledby="navbarDropdown")
                            li
                                a.dropdown-item.fw-bold.text-center(href="#")= user.name.split(' ')[0]
                            li
                                hr.dropdown-divider
                            li
                                a.dropdown-item(href="/me") My account
                            li
                                a.dropdown-item#logout(href="#") Log out

                else
                    li.nav-item.ml-2.my-2
                        a.btn.btn-outline-danger(href="/signup" role="button") Sign Up
                    li.nav-item.m-2
                        a.btn.btn-outline-primary(href="/login" role="button") Log in

