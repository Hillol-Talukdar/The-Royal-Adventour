extends base

block content
    h2.text-center.mt-2.mb-2 Update Tour
    form#updateTourForm
        .container.mt-3.mb-5
            .mb-3
                label.form-label(for="name") Name
                input.form-control#name(type="text" name="name", value=`${tour.name}`, required)
            .mb-3
                label.form-label(for="duration") Duration
                input.form-control#duration(type="number" name="duration", value=`${tour.duration}`, required)
            .mb-3
                label.form-label(for="maxGroupSize") Max group size
                input.form-control#maxGroupSize(type="number" name="maxGroupSize", value=`${tour.maxGroupSize}`, required)
            .mb-3
                label.form-label(for="difficulty") Difficulty
                input.form-control#difficulty(type="text" name="difficulty", value=`${tour.difficulty}`, required)
            .mb-3
                label.form-label(for="price") Price
                input.form-control#price(type="number" name="price", value=`${tour.price}`, required)
            .mb-3
                label.form-label(for="description") Description
                textarea.form-control#description( type="text" name="description", required)= `${tour.description}`
            .mb-3
                label.form-label(for="summary") Summary
                input.form-control#summary(type="text" name="summary", value=`${tour.summary}`, required)
            //- .mb-3
            //-     label.form-label(for="imageCover") Cover image
            //-     input.form-control.mt-2#imageCover(type='file' accept='image/*' name='imageCover')
            //- .mb-3
            //-     label.form-label(for="images") Images
            //-     input.form-control.mt-2#images(type='file' accept='image/*' name='images')

            .d-grid.col-5.mx-auto
                button.btn.btn-primary#updateTourBtn(data-tour-id=`${tour.id}`, type="submit") Update
