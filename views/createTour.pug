extends base

block content
    h2.text-center.mt-2.mb-2 Create New Tour
    form#create-tour-form
        .container.mt-3.mb-5
            .mb-3
                label.form-label(for="name") Name
                input.form-control#name(type="text" required)
            .mb-3
                label.form-label(for="duration") Duration
                input.form-control#duration(type="number" required)
            .mb-3
                label.form-label(for="maxGroupSize") Max group size
                input.form-control#maxGroupSize(type="number" required)
            .mb-3
                label.form-label(for="difficulty") Difficulty
                input.form-control#difficulty(type="text" required)
            .mb-3
                label.form-label(for="price") Price
                input.form-control#price(type="number" required)
            .mb-3
                label.form-label(for="description") Description
                textarea.form-control#description(required)
            .mb-3
                label.form-label(for="summery") Summery
                input.form-control#summery(type="text" required)
            .mb-3
                label.form-label(for="imageCover") Cover image
                input.form-control.mt-2#imageCover(type='file' accept='image/*' name='imageCover')
            .mb-3
                label.form-label(for="images") Images
                input.form-control.mt-2#images(type='file' accept='image/*' name='images')

            .d-grid.col-5.mx-auto
                button.btn.btn-primary(type="submit") Create
